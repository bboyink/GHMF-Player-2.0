{
  "appId": "com.ghmf.playback",
  "productName": "GHMF Playback 2.0",
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../Config",
      "to": "Config"
    },
    {
      "from": "../Music",
      "to": "Music"
    }
  ],
  "mac": {
    "category": "public.app-category.entertainment",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": ["nsis", "portable"]
  },
  "linux": {
    "target": ["AppImage", "deb"]
  }
}
